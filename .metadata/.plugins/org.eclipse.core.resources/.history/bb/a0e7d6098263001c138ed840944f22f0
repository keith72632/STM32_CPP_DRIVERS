#include <stdint.h>
#include <stdio.h>
#include "scb.h"
#include "faults.h"
int main(void)
{
    /* Loop forever */
	SCB::SCB *scb = (SCB::SCB*)0xe000ed00;


	scb->shcrs.mem_fault_enable();
	scb->shcrs.bus_fault_enable();
	scb->shcrs.usg_fault_enable();

	Faults::gen_memory_fault();

	for(;;);
}


